<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ZvDragOverlay" parent="AdwBin">
    <style>
      <class name="zv_drag_overlay" />
    </style>
    <child>
      <object class="GtkOverlay" id="overlay">
        <child type="overlay">
          <object class="GtkRevealer" id="revealer">
            <property name="transition-type">crossfade</property>
            <child>
              <object class="AdwBin">
                <style>
                  <class name="background" />
                </style>
                <child>
                  <object class="AdwStatusPage">
                    <property name="title" translatable="yes">Drop Image to View</property>
                    <property name="icon-name">image-round-symbolic</property>
                    <style>
                      <class name="overlay-status" />
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
